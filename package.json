{
  "name": "product-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "docker-compose up -d --force-recreate",
    "dc:up": "docker-compose up -d && docker-compose exec app node ace migration:run && node ace db:seeder && docker-compose logs",
    "dc:down": "docker-compose down",
    "dc:app": "docker-compose exec app /bin/sh",
    "dc:db": "docker-compose exec postgres_db /bin/bash",
    "serve": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.6.2",
    "@types/jest": "^27.4.1",
    "@types/pg": "^8.6.5",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.0.0",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "~4.6",
    "youch": "^3.1.1",
    "youch-terminal": "^2.1.3"
  },
  "dependencies": {
    "@adonisjs/core": "^5.6.0",
    "@adonisjs/drive-gcs": "^1.0.4",
    "@adonisjs/lucid": "^17.2.0",
    "@adonisjs/repl": "^3.1.0",
    "luxon": "^2.3.2",
    "pg": "^8.7.3",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2"
  }
}
